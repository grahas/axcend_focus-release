{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build workspace",
            "type": "shell",
            "command": "colcon build",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../../"
            }
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "colcon test",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/../../"
            }
        },
    ]
}
